<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sourcewalker.garanbot"
    android:versionCode="1"
    android:versionName="alpha-1">
    <application
        android:icon="@drawable/ic_launcher_garanbot"
        android:label="@string/app_name">
        <activity
            android:name=".account.LoginActivity"
            android:label="@string/account_activity_label"
            android:noHistory="true"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".ItemListActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewItemActivity" />
        <activity
            android:name=".EditItemActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".SettingsActivity" />
        <service
            android:exported="true"
            android:name=".account.AuthenticatorService">
            <intent-filter>
                <action
                    android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <provider
            android:name="net.sourcewalker.garanbot.data.GaranboItemsProvider"
            android:authorities="net.sourcewalker.garanbot">
        </provider>
        <service
            android:name=".data.ImageDownloadService" />
        <service
            android:name=".data.sync.SyncService"
            android:exported="true">
            <intent-filter>
                <action
                    android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
    </application>
    <uses-sdk
        android:minSdkVersion="8" />
    <uses-permission
        android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS" />
</manifest> 
