<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="ViewItemBackground"
        parent="@android:style/TextAppearance.Small">
        <item
            name="android:background">#000000</item>
    </style>
    <style
        name="ViewItemHeader">
        <item
            name="android:background">#F0F0F0</item>
        <item
            name="android:layout_width">match_parent</item>
        <item
            name="android:layout_height">wrap_content</item>
    </style>
    <style
        name="ViewItemHeaderText">
        <item
            name="android:paddingLeft">10dip</item>
        <item
            name="android:textSize">10pt</item>
        <item
            name="android:typeface">serif</item>
        <item
            name="android:textColor">#000000</item>
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:layout_span">2</item>
    </style>
    <style
        name="ViewItemRow"
        parent="@style/ViewItemBackground">
        <item
            name="android:layout_width">match_parent</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:paddingLeft">4dip</item>
    </style>
    <style
        name="ViewItemRowHeader"
        parent="@style/ViewItemBackground">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:gravity">right</item>
        <item
            name="android:paddingRight">5dip</item>
        <item
            name="android:paddingBottom">5dip</item>
        <item
            name="android:textStyle">bold</item>
    </style>
    <style
        name="ViewItemRowData"
        parent="@style/ViewItemBackground">
        <item
            name="android:layout_width">wrap_content</item>
        <item
            name="android:layout_height">wrap_content</item>
        <item
            name="android:paddingRight">8dip</item>
    </style>
</resources>
