<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/create_item_outer_linear_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView android:id="@+id/create_item_scrollview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"> 
        <LinearLayout
            android:id="@+id/create_item_inner_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="@string/input_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/input_item_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/input_item_itemtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_itemtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/input_item_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /> 
            <TextView
                android:text="@string/input_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /> 
            <TextView
                android:text="@string/input_item_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/input_item_purchasedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/item_purchasedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />    
                
            <LinearLayout
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >  
                <Button android:id="@+id/apply_button"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_create_item" />
                <Button android:id="@+id/cancel_button"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/cancel_create_item" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>