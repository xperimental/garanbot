<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">
        <ImageView
            android:id="@+id/item_view_image"
            android:layout_width="96dip"
            android:layout_height="96dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="8dip"
            android:src="@drawable/item_nopicture" />
        <TextView
            android:text="Name"
            android:id="@+id/item_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_view_image"
            android:layout_alignBottom="@id/item_view_image"
            android:padding="10dip"
            android:textSize="12pt"
            android:typeface="serif" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@drawable/bottom_gradient" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0">
            <TextView
                android:text="@string/item_view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:paddingLeft="8dip"
                android:textSize="10pt"
                android:typeface="serif"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_span="2"
                android:background="@drawable/top_gradient" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">
            <TextView
                android:text="@string/item_view_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:text="Manufacturer"
                android:id="@+id/item_view_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#000000">
            <TextView
                android:text="@string/item_view_model"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:text="Model"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/item_view_model">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#000000">
            <TextView
                android:text="@string/item_view_location"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:text="Location"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/item_view_location">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_span="2"
                android:background="@drawable/bottom_gradient" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0">
            <TextView
                android:text="@string/item_view_warranty"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_span="2"
                android:textSize="10pt"
                android:paddingLeft="8dip"
                android:textColor="#000000" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_span="2"
                android:background="@drawable/top_gradient" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#000000">
            <TextView
                android:text="@string/item_view_vendor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:text="Vendor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/item_view_vendor">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#000000">
            <TextView
                android:text="@string/item_view_purchase"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:text="Purchase Date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/item_view_purchase">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#000000">
            <TextView
                android:text="@string/item_view_endwarranty"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:text="End of warranty"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/item_view_endwarranty">
            </TextView>
        </TableRow>
    </TableLayout>
</LinearLayout>
